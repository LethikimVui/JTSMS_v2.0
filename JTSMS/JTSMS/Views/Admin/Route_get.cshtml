@model List<SharedObjects.ValueObjects.VWorkFlow>;

@{
    var routeName = ViewData["route"] as IEnumerable<SharedObjects.ValueObjects.VRoute>;
}
<form id="">
    <table class="table table-bordered table-hover table-striped" style="margin: auto;width: 50% !important;">
        <thead>
            <tr class="text-center bold">
                <td>Route Name</td>
                <td>Status</td>
                <td>Sequence</td>
                <td style="width:100px">Modification</td>
            </tr>
        </thead>

        <tbody>
            <tr class="text-center first-row">
                <td>Submission</td>
                <td> Active</td>
                <td>
                    @* <input id="txt-sequence" class="sequence input" type="number" value="0" data-routeid="0" style="background-color:cyan" readonly />*@
                </td>
                <td class="text-center">
                    <input type="checkbox" checked="checked" data-routeid="0" class="active input" disabled />
                </td>
            </tr>
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.RouteName</td>
                        @{
                            var status = item.isActive == 1 ? "Active" : "Inactive";
                            <td> @status</td>
                        }
                        <td>
                            @* <input id="txt-sequence" class="sequence input" type="number" value="@item.Sequence" data-routeid="@item.RouteId" />*@
                            <span class="up glyphicon glyphicon-chevron-up"></span>
                            <span class="down glyphicon glyphicon-chevron-down"></span>
                        </td>
                        <td class="text-center">
                            @{
                                var check = @item.isActive == 1 ? true : false;
                                <input type="checkbox" checked="@check" data-routeid="@item.RouteId" class="active input" />
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                foreach (var item in routeName.ToList())
                {
                    <tr class="text-center">
                        <td>@item.RouteName</td>

                        <td>Inactive</td>
                        <td>
                            <input id="txt-sequence" class="sequence input" type="number" data-routeid="@item.RouteId" />
                        </td>
                        <td>
                            <span class="up glyphicon glyphicon-chevron-up"></span>
                            <span class="down glyphicon glyphicon-chevron-down"></span>
                        </td>
                        <td class="text-center">
                            <input type="checkbox" data-routeid="@item.RouteId" class="active input" />
                        </td>
                    </tr>
                }
            }
        </tbody>


    </table>
    @if (Model.Count > 0)
    {
        <div class="form-group col-md-2 pull-right">
            <a class="btn btn-success" id="btn-save">Save</a>
        </div>
    }
    else
    {
        <div class="form-group col-md-2 pull-right">
            <a class="btn btn-success" id="btn-add">Add</a>
        </div>
    }
</form>


